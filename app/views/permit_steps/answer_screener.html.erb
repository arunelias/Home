<!-- Render the sidebar partial -->
<%= render partial: "layouts/sidebar", locals: {cur_step: 1} %>

<!-- Begin step -->
<div class="col-sm-9">

  <h1>Enter your project details</h1>

  <!-- Room Additions section -->
  <div class="panel panel-default">
  	<div class="panel-heading">
  		<h4>Room Additions</h4>
  	</div>
  	<div class="panel-body">
  		<p>What best describes your room addition?</p>
  		<label for="test-label">Size</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupRoomAdditions1" id="optionsRadios1" value="option1">
  		    Less than 1,000 sq ft
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupRoomAdditions1" id="optionsRadios2" value="option2">
  		    Greater than 1,000 sq ft
  		  </label>
  		</div>
  		<label for="test-label">Stories</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupRoomAdditions2" id="optionsRadios3" value="option3">
  		    1 story
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupRoomAdditions2" id="optionsRadios4" value="option4">
  		    2 or more stories
  		  </label>
  		</div>						
  	</div>
  </div>

  <!-- Shed/Garage Accessory Structure section -->
  <div class="panel panel-default">
  	<div class="panel-heading">
  		<h4>Shed/Garage</h4>
  	</div>
  	<div class="panel-body">
  		<p>What best describes your Shed/Garage?</p>
  		<label for="test-label">Size</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupAccessory1" id="optionsRadios1" value="option5">
  		    Less than 120 sq ft
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupAccessory1" id="optionsRadios2" value="option6">
  		    Greater than 120 sq ft
  		  </label>
  		</div>
  		<label for="test-label">Stories</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupAccessory2" id="optionsRadios3" value="option7">
  		    1 story
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupAccessory2" id="optionsRadios4" value="option8">
  		    2 or more stories
  		  </label>
  		</div>						
  	</div>
  </div>

  <!-- Deck section -->
  <div class="panel panel-default">
  	<div class="panel-heading">
  		<h4>Deck</h4>
  	</div>
  	<div class="panel-body">
  		<p>What best describes your deck?</p>
  		<label for="test-label">Size</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupDeck1" id="optionsRadios1" value="option5">
  		    Less than 120 sq ft
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupDeck1" id="optionsRadios2" value="option6">
  		    Greater than 120 sq ft
  		  </label>
  		</div>
  		<label for="test-label">Grade</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupDeck2" id="optionsRadios3" value="option7">
  		    Less than 30 inches above grade
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupDeck2" id="optionsRadios4" value="option8">
  		    More than 30 inches above grade
  		  </label>
  		</div>	
  		<label for="test-label">Dwelling Attachment</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupDeck3" id="optionsRadios1" value="option5">
  		    Attached to dwelling
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupDeck3" id="optionsRadios2" value="option6">
  		    Not attached to dwelling
  		  </label>
  		</div>
  		<label for="test-label">Exit Door</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupDeck4" id="optionsRadios3" value="option7">
  		    Serves a required exit door
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupDeck4" id="optionsRadios4" value="option8">
  		    Does not serve a required exit door
  		  </label>
  		</div>							
  	</div>
  </div>

  <!-- Swimming Pool section -->
  <div class="panel panel-default">
  	<div class="panel-heading">
  		<h4>Swimming Pool</h4>
  	</div>
  	<div class="panel-body">
  		<p>What best describes your Swimming Pool?</p>
  		<label for="test-label">Ground</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupPool1" id="optionsRadios1" value="option5">
  		    Pool is in ground
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupPool1" id="optionsRadios2" value="option6">
  		    Pool is above ground
  		  </label>
  		</div>
  		<label for="test-label">Water</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupPool2" id="optionsRadios3" value="option7">
  		    Less than 5,000 gallons
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupPool2" id="optionsRadios4" value="option8">
  		    More than 5,000 gallons
  		  </label>
  		</div>						
  	</div>
  </div>

  <!-- Carports or Outdoor Covers section -->
  <div class="panel panel-default">
  	<div class="panel-heading">
  		<h4>Carports or Outdoor Covers</h4>
  	</div>
  	<div class="panel-body">
  		<p>What best describes your Carports/Patio Covers/Porch Covers?</p>
  		<label for="test-label">Metal Type</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupCovers1" id="optionsRadios1" value="option5">
  		    It’s metal type II
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupCovers1" id="optionsRadios2" value="option6">
  		    It’s not metal type II
  		  </label>
  		</div>
  		<label for="test-label">Wood Type</label>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupCovers2" id="optionsRadios3" value="option7">
  		    It’s wood type V
  		  </label>
  		</div>
  		<div class="radio">
  		  <label>
  		    <input type="radio" name="groupCovers2" id="optionsRadios4" value="option8">
  		    It’s not wood type V
  		  </label>
  		</div>						
  	</div>
  </div>

  <!-- General repairs alert section -->
  <div class="alert alert-info">
  	<p>Windows (excludes replacing broken glass)</p>
  </div>

  <div class="alert alert-info">
  	<p>Doors (excludes replacement of existing door on current hinges)</p>
  </div>

  <div class="alert alert-info">
  	<p>Walls (excludes paint, wallpaper, and repair of sheetrock unless studs are moved or altered)</p>
  </div>

  <div class="alert alert-info">
  	<p>Siding Replacement (excludes placing of new siding over existing siding)</p>
  </div>

  <div class="alert alert-info">
  	<p>Floor – Structural Repairs (excludes floor covering such as carpet, tile, wood/laminate flooring)</p>
  </div>

  <!-- Intro text -->
  <div class="intro">
    <h1>Enter your address</h1>
    <p>Type your address in the box below:</p>
  </div>

  <!-- Start the address form -->
  <div class="form">
    <%= form_for @permit, url: wizard_path, html: {name: "address-form"} do |f| %>

      <!-- error checking -->
      <% if @permit.errors.any? %>
        <div class="alert alert-danger">
          <% @permit.errors.messages.values.each do |msg| %>
            <%msg.each do  |m| %>
              <strong><%= m %></strong>
            <%end %>
          <% end %>
        </div>
      <% end %>
      <!-- ./ error checking -->

      <!-- address entry -->
      <div class="form-group">
        <%= f.text_field :owner_address, placeholder: "Enter your address", class: "form-control input-lg" %>
      </div>
      <!-- ./address entry -->

      <!-- submit button -->
      <%= f.submit "Submit", class: "btn btn-primary btn-lg"%>

    <% end %>
  </div><!-- ./form -->
</div> <!-- ./col-sm-9 -->