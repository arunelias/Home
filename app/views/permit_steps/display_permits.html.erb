<!-- Render the sidebar partial -->
<%= render partial: "layouts/sidebar", locals: {cur_step: PermitStepsController::STEPS.index(:display_permits) + 1} %>

<!-- Begin step -->
<div class="col-sm-9">

  <!-- Intro text -->
  <div class="intro">
    <h1>This is how to start your project(s)</h1>
  </div>
  
  <!-- Permit Not Needed Projects -->
  <% if ! @permit_needs["permit_not_needed"].empty? %>

    <div class="alert alert-success permit_not_needed" role="alert">
      <h4>You do not need a permit for the following project(s), build on!</h4>
      <ul>
        <% @permit_needs["permit_not_needed"].each do |project| %>
          <li><%= project %></li>
        <% end %>
      </ul>
      <p class="info-bottom">A permit is not needed for your project. If you have additional questions, please contact Development Services Department at (210) 207-1111.</p>  
    </div>

  <% end %>
  <!-- ./Permit Not Needed Project -->
  
  <!-- Permit Needed Projects -->
  <% if ! @permit_needs["permit_needed"].empty? %>
  
    <div class="alert alert-warning permit_needed" role="alert">
      <h4>You need a permit for the following project(s):</h4>
        <ul>
          <% @permit_needs["permit_needed"].each do |project| %>
            <li><%= project %></li>
          <% end %>
        </ul>
        <p class="info-bottom">Please see below for more details.</p>  
    </div>

  <% end %>
  <!-- ./Permit Needed Project -->
  
  <!-- Further Assistance Needed Projects -->
  <% if ! @permit_needs["further_assistance_needed"].empty? %>

    <div class="alert alert-danger further_assistance_needed" role="alert">
      <p class="info-top">Weâ€™re sorry, the residential permit application is not appropriate for the 
          
          <% @permit_needs["further_assistance_needed"].each do |project| %>
            <span class="project-title"><%= project %></span>
          <% end %>
          
      that you want to build.
      <p>We can help you apply for the right permit for this project. Call us at (210) 207-1111 and we will help you.</p>
    </div>

  <% end %>

  <% if ! @permit_needs["permit_needed"].empty? %>

    <div class="panel panel-default panel-info-addition">
      <div class="panel-heading">
        <h4>General Repair/Residential Permit Application</h4>
      </div>
      <div class="panel-body">
        <p>This permit is required for most residential repair projects. Separate permits are required for any mechanical, electrical, or plumbing work.</p>
        <p><strong>This is the permit for the following project(s):</strong></p>    
        <ul>
          <% @permit_needs["permit_needed"].each do |project| %>
            <li><%= project %></li>
          <% end %>
        </ul>            
        <p><strong>This is the application cost:</strong></p>
        <p>Application costs are based on the <a href="http://www.sanantonio.gov/dsd/pdf/FY2014FeeSchedule.pdf" target="_blank">Fee Schedule [PDF]</a>.</p>
        <p><strong>There are the required documents:</strong></p>
        <p>We will hep you fill out:</p>
          <ul>
            <li>Completed permit application</li>
            <li>Completed site plan</li>
          </ul>        
        <p>You will also need:</p>
          <ul>
            <li>Form of photo identification (i.e. driver's license, passport)</li>
            <li>Proof of home ownership for the property you're working on (i.e. deed, Bexar County Appraisal District paperwork)</li> 
          </ul>

        <!-- Next button -->
        <%= link_to "Apply for this permit", next_wizard_path, class: "btn btn-primary btn-lg" %>
      </div>
    </div>

  <% end %>


</div><!-- ./col-sm-9 -->