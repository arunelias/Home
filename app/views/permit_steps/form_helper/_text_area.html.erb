<%= f.label attribute, question %>
<% if @project.errors[attribute].length >= 1 %>

  <!-- create an errors div to style error message and make input red -->    
  <div class="field_with_errors">
    <!-- Print out the error message (from validator) -->
    <% @project.errors[attribute].each do | msg | %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>

<div class="text-area">
  <% if helper_text %>
    <p class="help-block"><%= helper_text%></p>
  <% end %>
  <%= f.text_area attribute, rows: "3", class: "form-control input-lg" %>
</div>
