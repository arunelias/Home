<!-- Render the sidebar partial -->
<%= render partial: "layouts/sidebar", locals: {cur_step: 0} %>

<!-- Begin step -->
<div class="col-sm-9">

  <!-- Intro text -->
  <div class="intro">
    <h1><%= t('views.projects.new.intro.heading') %></h1>
  </div>

  <!-- Start the project select form -->
  <div class="form <%= I18n.locale.to_s %>">
    <%= form_for @project, html: {name: "select-improvement"} do |f| %>

      <!-- error checking -->
      <% if @project.errors.any? %>
        <div class="alert alert-danger">
          <% @project.errors.messages.values.each do |msg| %>
            <%msg.each do  |m| %>
              <strong><%= m %></strong>
            <%end %>
          <% end %>
        </div>
      <% end %>
      <!-- ./ error checking -->

        <div class="row">
          <div class="col-md-4">
            <%= f.check_box :selected_addition %>              
            <%= f.label :selected_addition, id: "addition", class: "project" do %>
              <p class="long"><%= t('views.projects.new.project.addition.html') %></p>
            <% end %>
          </div>
          <div class="col-md-4">
            <%= f.check_box :selected_acs_struct %>
            <%= f.label :selected_acs_struct, id: "acs-struct", class: "project" do %>
              <p><%= t('views.projects.new.project.acs_struct') %></p>
            <% end %>               
          </div>
          <div class="col-md-4">
            <%= f.check_box :selected_deck %>
            <%= f.label :selected_deck, id: "deck", class: "project" do %>
              <p><%= t('views.projects.new.project.deck') %></p>
            <% end %>               
          </div>
        </div><!-- ./row -->

        <div class="row">
          <div class="col-md-4">
            <%= f.check_box :selected_pool %>
            <%= f.label :selected_pool, "Swimming Pool", id: "pool", class: "project" do %>
              <p><%= t('views.projects.new.project.pool') %></p>
            <% end %>              
          </div>
          <div class="col-md-4">
            <%= f.check_box :selected_cover %>
            <%= f.label :selected_cover, id: "cover", class: "project" do %>
              <p class="long"><%= t('views.projects.new.project.cover.html') %></p>
            <% end %>
          </div>
          <div class="col-md-4">
            <%= f.check_box :selected_window %>
            <%= f.label :selected_window, id: "window", class: "project" do %>
              <p><%= t('views.projects.new.project.window') %></p>
            <% end %>
          </div>
        </div><!-- ./row -->

        <div class="row">
          <div class="col-md-4">
            <%= f.check_box :selected_door %>
            <%= f.label :selected_door, id: "door", class: "project" do %>
              <p><%= t('views.projects.new.project.door') %></p>
            <% end %>
          </div>
          <div class="col-md-4">
            <%= f.check_box :selected_wall %>
            <%= f.label :selected_wall, id: "wall", class: "project" do %>
              <p><%= t('views.projects.new.project.wall') %></p>
            <% end %>
          </div>
          <div class="col-md-4">
            <%= f.check_box :selected_siding %>
            <%= f.label :selected_siding, id: "siding", class: "project" do %>
              <p><%= t('views.projects.new.project.siding') %></p>
            <% end %>              
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <%= f.check_box :selected_floor %>
            <%= f.label :selected_floor, id: "floor", class: "project" do %>
              <p><%= t('views.projects.new.project.floor') %></p> 
            <% end %>              
          </div>
          <div class="col-md-4"></div>
          <div class="col-md-4"></div>
        </div>

      <!-- Submit button -->
      <%= f.submit t('views.projects.new.submit'), class: "btn btn-primary btn-lg", id: "new_project_submit" %>

    <% end %>
  </div><!-- ./form -->
</div><!-- ./col-sm-9 -->

